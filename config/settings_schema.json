      },
      {
        "type": "richtext",
        "id": "promo_bar_content",
        "label": "Promo Bar Content"
      },
      {
        "type": "header",
        "content": "Predictive Search"
      },
      {
        "type": "checkbox",
        "id": "enable_predictive_search",
        "label": "Enable Predictive Search"
      },
      {
        "type": "header",
        "content": "Modal"
      },
      {
        "type": "checkbox",
        "id": "enable_modal",
        "label": "Enable Modal"
      },
      {
        "type": "text",
        "id": "modal_title",
        "label": "Title",
        "default": "Modal Title"
      },
      {
        "type": "text",
        "id": "modal_description",
        "label": "Description",
