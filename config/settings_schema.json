      },
      {
        "type": "checkbox",
        "id": "show_promo_bar",
        "label": "Show Promo Bar"
      },
      {
        "type": "checkbox",
        "id": "collapse_promo_bar",
        "label": "Collapse Promo Bar on Scroll",
