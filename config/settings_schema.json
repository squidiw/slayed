      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "outline_b_color",
        "label": "Outline Border Color"
      },
      {
        "type": "color",
        "id":"divider_color",
        "label":"Divider Color",
        "default":"#aaaaaa"
      }
    ]
  },
  {
    "name": "Grid Settings",
    "settings": [
      {
        "type": "header",
        "content": "Columns"
      },
      {
        "type": "range",
        "id": "grid-columns-desktop",
        "label": "Grid Columns Desktop",
        "min": 2,
        "max": 4,
        "step": 1,
        "default": 2
      },
      {
        "type": "range",
        "id": "grid-columns-mobile",
        "label": "Grid Columns Mobile",
