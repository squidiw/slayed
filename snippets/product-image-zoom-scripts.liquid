<script defer src="{{ 'drift.min.js' | asset_url }}"></script>
<script>
  window.productZoomContainerSelector = '{{ image_container }}'

  window.addEventListener('DOMContentLoaded', () => {
    window.productZoom = new Drift(document.querySelector(`${window.productZoomContainerSelector} [data-zoom]`), {
      paneContainer: document.querySelector(`${window.productZoomContainerSelector}`),
      inlinePane: false,
    });
  });
</script>
